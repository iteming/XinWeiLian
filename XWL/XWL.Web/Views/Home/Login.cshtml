<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>登录系统管理</title>

    <link href="~/Public/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Public/css/animations.css" rel="stylesheet" type="text/css" />
    <link href="~/Public/css/style-login.css" rel="stylesheet" type="text/css" />
    <link href="~/Public/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
</head>
<body class="gray-bg">
    <div class="middle-box text-center loginscreen">
        <div>
            <div>
                <h1 class="logo-name">MANAGE</h1>
            </div>
            <h3>欢迎登录系统管理</h3>
            <p></p>
            @if (ViewBag.TipTitle != null && ViewBag.TipTitle != "")
            {
                <p style="color: red">@ViewBag.TipTitle</p>
            }
            <form class="m-t" role="form" method="post" action="@Resources.Global.Lang/Home/Login">
                <div class="form-group">
                    <input name="username" type="text" class="form-control" placeholder="用户名" required="">
                </div>
                <div class="form-group">
                    <input name="password" type="password" class="form-control" placeholder="密码" required="">
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">登录</button>
            </form>
            <p class="m-t"> 
                <small><strong> Copyright </strong> NEDT &copy; @DateTime.Now.Year</small> 
            </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/Public/js/jquery.min.js"></script>
    <script src="~/Public/js/bootstrap.min.js"></script>
</body>
</html>
